<Page x:Class="ModularInventoryManagement.OrderManagement.Views.TestOrderView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ModularInventoryManagement.OrderManagement.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestOrderView">

    <StackPanel VerticalAlignment="Center" Margin="24">
        <TextBlock FontSize="24" Margin="4">If you see this, you're moved to Manage Order tab!</TextBlock>
        <Button HorizontalAlignment="Center" Padding="8,2" 
                FontSize="24" Margin="4"
                Click="Button_Click">Quit</Button>
    </StackPanel>
</Page>
