<Window x:Class="ModularInventoryManagement.AuthenticationManagement.Views.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Please wait..." SizeToContent="WidthAndHeight">
    <StackPanel Margin="12">
        <Label Padding="0,0,0,5">Please wait...</Label>
        <ProgressBar IsIndeterminate="True" Height="16" Width="256" />
    </StackPanel>
</Window>
